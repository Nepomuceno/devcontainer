{
	"name": "Ben's Dev Container",
	"dockerFile": "Dockerfile",
	"remoteUser": "developer",
	"runArgs": [
		"--cap-add=NET_ADMIN"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"mikestead.dotenv"
			],
			"settings": {
				"workbench.colorTheme": "GitHub Dark Default",
				"editor.formatOnSave": false,
				"workbench.iconTheme": "material-icon-theme",
  				"material-icon-theme.hidesExplorerArrows": true,
				"material-icon-theme.folders.associations": {
					".cnab": "lib",
					"charts": "container",
					"nginx": "src",
					"bicep": "project",
					".azdo": "azure-pipelines",
					".devinfrastructure": "project",
					".devinfrastructure/vpn": "guard",
					".devinfrastructure/tf-backend": "project",
					"root-install-scripts": "scripts",
					"install-scripts": "scripts",
					"dotfiles": "constant",
					".code-workspaces": "vscode"
				},
				"material-icon-theme.files.associations": {
					"devcontainer.json": "vscode"
				}
			}
		}
	}
}